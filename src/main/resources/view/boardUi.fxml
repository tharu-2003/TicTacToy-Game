<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="632.0" prefWidth="788.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.gdse72.tictactoy.controller.BoardUiController">
   <children>
      <!-- Modern gradient background with shadow effect -->
      <Pane prefHeight="632.0" prefWidth="788.0" style="-fx-background-color: linear-gradient(to bottom right, #1a2a6c, #b21f1f, #fdbb2d); -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" />

      <!-- Stylish game title with glow effect -->
      <Label alignment="CENTER" layoutX="283.0" layoutY="14.0" prefHeight="58.0" prefWidth="222.0" style="-fx-effect: dropshadow(three-pass-box, rgba(255,255,255,0.5), 10, 0, 0, 0);" text="Tic Tac Toe">
         <font>
            <Font name="Impact" size="48.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="gold" offset="0.0" />
                  <Stop color="white" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>

      <!-- Player turn indicator -->
      <Label fx:id="lblTurn" alignment="CENTER" layoutX="169.0" layoutY="80.0" prefHeight="30.0" prefWidth="440.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10; -fx-padding: 5;">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#ffffff" offset="0.0" />
                  <Stop color="#a1c4fd" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>

      <!-- Modern game board with glass effect -->
      <GridPane fx:id="gridPane" layoutX="169.0" layoutY="183.0" prefHeight="358.0" prefWidth="440.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 20; -fx-border-color: white; -fx-border-radius: 20; -fx-border-width: 2; -fx-effect: innershadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btn00" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn01" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn02" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="2">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn10" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn11" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn12" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn20" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn21" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
            <Button fx:id="btn22" focusTraversable="false" mnemonicParsing="false" onAction="#btnOnAction" prefHeight="118.0" prefWidth="164.0" style="-fx-background-color: transparent; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2; -fx-border-radius: 5;" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="50.0" />
               </font>
            </Button>
         </children>
      </GridPane>

      <!-- Error message display -->
      <Label fx:id="lblError" alignment="CENTER" layoutX="134.0" layoutY="122.0" prefHeight="38.0" prefWidth="509.0" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 5;">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#ff9966" offset="0.0" />
                  <Stop color="#ff5e62" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>

      <!-- Score display -->
      <Label fx:id="lblScore" alignment="CENTER" layoutX="169.0" layoutY="550.0" prefHeight="30.0" prefWidth="440.0" style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 10; -fx-padding: 5;">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <textFill>
            <Color />
         </textFill>
      </Label>

      <!-- Modern retry button with gradient -->
      <Button fx:id="btnRetry" layoutX="620.0" layoutY="568.0" mnemonicParsing="false" onAction="#btnRetryOnAction" prefHeight="38.0" prefWidth="131.0" style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to right, #ff512f, #dd2476); -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 1);" text="Retry">
         <font>
            <Font name="System Bold Italic" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
